{{>layouts/header}}
<form action="/hospitals" method="get">
    {{#keyword}}
        지역: <input type="text" name="keyword" value="{{keyword}}"/>
    {{/keyword}}
    {{^keyword}}
        지역: <input type="text" name="keyword"/>
    {{/keyword}}
    <input type="submit" />
</form>
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">이름</th>
        <th scope="col">도로명주소</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{roadNameAddress}}</td>
        </tr>
    {{/hospitals}}
    </tbody>
</table>
<ul class="pagination justify-content-center">
    {{#keyword}}
        <li class="page-item">
            <a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next</a>
        </li>
    {{/keyword}}
    {{^keyword}}
        <li class="page-item">
            <a class="page-link" href="?page={{previous}}">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?page={{next}}">Next</a>
        </li>
    {{/keyword}}

</ul>
{{>layouts/footer}}